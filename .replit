modules = ["php-8.2", "nodejs-20", "postgresql-16"]
[agent]
expertMode = true

[userenv]

[userenv.shared]
APP_NAME = "Lafiyar Iyali Project"
APP_ENV = "local"
APP_DEBUG = "true"
APP_URL = "http://0.0.0.0:5000"
DB_CONNECTION = "pgsql"
SESSION_DRIVER = "file"
QUEUE_CONNECTION = "database"
CACHE_STORE = "database"
MAIL_MAILER = "log"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Development Server"

[[workflows.workflow]]
name = "Development Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "php artisan serve --host=0.0.0.0 --port=5000"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[nix]
channel = "stable-25_05"
